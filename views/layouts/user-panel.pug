extends master

block content
    .min-h-full
        .bg-gray-800.pb-32
            nav.bg-gray-800
                .mx-auto.max-w-7xl(class='sm:px-6 lg:px-8')
                    .border-b.border-gray-700
                        .flex.h-16.items-center.justify-between.px-4(class='sm:px-0')
                            .flex.items-center
                                .flex-shrink-0
                                    img.h-8.w-8(src='https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500', alt='Your Company')
                                .hidden(class='md:block')
                                    .ml-10.flex.items-baseline.space-x-4
                                        // Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"
                                        a.rounded-md.bg-gray-900.px-3.py-2.text-sm.font-medium.text-white(href='/users', aria-current='page') Converter
                                        a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300(href='/users/conversions', class='hover:bg-gray-700 hover:text-white') My Conversions
                                        a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300(href='/users/update-account', class='hover:bg-gray-700 hover:text-white') Update Account
                                        a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300(href='/users/live-exchange', class='hover:bg-gray-700 hover:text-white') Live Exchange Rates
                                        a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300(href='/users/logout', class='hover:bg-gray-700 hover:text-white') Logout
                            .hidden(class='md:block')
                                .ml-4.flex.items-center(class='md:ml-6')
                                    // Profile dropdown
                                    .relative.ml-3
                                        div
                                            button#user-menu-button.relative.flex.max-w-xs.items-center.rounded-full.bg-gray-800.text-sm(type='button', class='focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800', aria-expanded='false', aria-haspopup='true')
                                                span.absolute(class='-inset-1.5')
                                                span.sr-only Open user menu
                                                -if (userPhoto)
                                                    img(class="inline-block h-8 w-8 rounded-full" src="/images/" + userPhoto)
                                                -else
                                                    img(class="inline-block h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80")

            header.py-10
                .mx-auto.max-w-7xl.px-4(class='sm:px-6 lg:px-8')
                    h1.text-3xl.font-bold.tracking-tight.text-white #{pageTitle}
        main.-mt-32
            .mx-auto.max-w-7xl.px-4.pb-12(class='sm:px-6 lg:px-8')
                .rounded-lg.bg-white.px-5.py-6.shadow(class='sm:px-6')
                    block user-panel
// Extend a base template named 'master' from the 'layouts' directory
extends layouts/master

// Define a content block that will be inserted into the 'master' template
block content
  // Create a div with multiple Tailwind CSS classes
  div.flex.min-h-full.flex-col.justify-center.py-12(class='sm:px-6 lg:px-8')
    // Create a div to center the content within a specific viewport size
    div(class='sm:mx-auto sm:w-full sm:max-w-md')
      // Display a logo image centered in the div with specific height and width
      img.mx-auto.h-10.w-auto(src='https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600', alt='Your Company')
      // Create an h2 element for the heading with Tailwind CSS classes
      h2.mt-6.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-gray-900 Sign in to your account
    // Create a div with margin-top for additional form content
    div.mt-10(class='sm:mx-auto sm:w-full sm:max-w-[480px]')
      // Create a div with padding and shadow for the form container
      div.bg-white.px-6.py-12.shadow(class='sm:rounded-lg sm:px-12')
        // Create a form with POST method and spacing between elements
        form.space-y-6(action='#', method='POST')
          // Create a div for the first name input field
          div
            // Label for the first name input field
            label.block.text-sm.font-medium.leading-6.text-gray-900(for='email') First name
            // Create a div with margin-top for the input field
            div.mt-2
              // First name input field with various classes and attributes
              input#fname.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='fname', type='text', required='', class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
          // Create a div for the last name input field
          div
            // Label for the last name input field
            label.block.text-sm.font-medium.leading-6.text-gray-900(for='email') Last name
            // Create a div with margin-top for the input field
            div.mt-2
              // Last name input field with various classes and attributes
              input#lname.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='lname', type='text', required='', class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
          // Create a div for the email input field
          div
            // Label for the email input field
            label.block.text-sm.font-medium.leading-6.text-gray-900(for='email') Email address
            // Create a div with margin-top for the input field
            div.mt-2
              // Email input field with various classes and attributes
              input#email.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='email', type='email', autocomplete='email', required='', class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
          // Create a div for the password input field
          div
            // Label for the password input field
            label.block.text-sm.font-medium.leading-6.text-gray-900(for='password') Password
            // Create a div with margin-top for the input field
            div.mt-2
              // Password input field with various classes and attributes
              input#password.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='password', type='password', autocomplete='current-password', required='', class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
          // Create a div for the confirm password input field
          div
            // Label for the confirm password input field
            label.block.text-sm.font-medium.leading-6.text-gray-900(for='password') Confirm Password
            // Create a div with margin-top for the input field
            div.mt-2
              // Confirm password input field with various classes and attributes
              input#conf_password.block.w-full.rounded-md.border-0.text-gray-900.shadow-sm.ring-1.ring-inset.ring-gray-300(name='conf_password', type='password', autocomplete='current-password', required='', class='py-1.5 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
          // Create a div for the submit button
          div
            // Submit button with various classes and attributes
            button.flex.w-full.justify-center.rounded-md.bg-indigo-600.px-3.text-sm.font-semibold.leading-6.text-white.shadow-sm(type='submit', class='py-1.5 hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600') Sign in
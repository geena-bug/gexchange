extends ../layouts/master

block content
    // Main container div with flex, minimum height, and padding
    div.flex.min-h-full.flex-col.justify-center.py-12(class='sm:px-6 lg:px-8')
        // Inner div for centering content within the screen size constraints
        div(class='sm:mx-auto sm:w-full sm:max-w-md')
            // Centered company logo image
            span.text-indigo-600.h-12.w-auto.flex.justify-center
                svg#warehouse(fill='currentColor' xmlns='http://www.w3.org/2000/svg' width='50' height='50' viewbox='0 0 15 15')
                    path(d='M13.5,5c-0.0762,0.0003-0.1514-0.0168-0.22-0.05L7.5,2L1.72,4.93C1.4632,5.0515,1.1565,4.9418,1.035,4.685\
                                                                      S1.0232,4.1215,1.28,4L7.5,0.92L13.72,4c0.2761,0.0608,0.4508,0.3339,0.39,0.61C14.0492,4.8861,13.7761,5.0608,13.5,5z M5,10H2v3h3\
                                                                      V10z M9,10H6v3h3V10z M13,10h-3v3h3V10z M11,6H8v3h3V6z M7,6H4v3h3V6z')            // Heading for the sign-up form
            h2.mt-6.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-gray-900 Sign in to your account
        // Another inner div with margin top and width constraints
        div.mt-10(class='sm:mx-auto sm:w-full sm:max-w-[480px]')
            // Container div for the form with background, padding, and shadow
            div.bg-white.px-6.py-12.shadow(class='sm:rounded-lg sm:px-12')
                .rounded-md.bg-green-50.p-4
                    .flex
                        .flex-shrink-0
                            svg.h-5.w-5.text-green-400(viewBox='0 0 20 20', fill='currentColor', aria-hidden='true')
                                path(fill-rule='evenodd', d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z', clip-rule='evenodd')
                        .ml-3
                            h3.text-sm.font-medium.text-green-800 Registration was successful!
                            .mt-2.text-sm.text-green-700
                                p
                                    | Thank you for creating an account. Please click the link below to login.
                            .mt-4
                                .-mx-2.flex(class='-my-1.5')
                                    a.rounded-md.bg-green-50.px-2.text-sm.font-medium.text-green-800(type='button', class='py-1.5 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-offset-2 focus:ring-offset-green-50', href="/auth/login") Login
                                    a.ml-3.rounded-md.bg-green-50.px-2.text-sm.font-medium.text-gray-800(type='button', class='py-1.5 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-offset-2 focus:ring-offset-green-50', href="/auth/signup") Back to signup